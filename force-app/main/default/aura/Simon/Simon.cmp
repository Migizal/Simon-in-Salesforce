<aura:component implements="flexipage:availableForRecordHome">
<aura:attribute name="ButtonColors" type="String[]" default="['red', 'green', 'blue', 'yellow']" /> <!--Color value-->
<aura:attribute name="SimonPatternHolder" type="String[]" /> <!--holds pattern for comparison-->
<aura:attribute name="SimonPattern" type= "String[]" /> <!--Color value-->
<aura:attribute name="UserPatternHolder" type="String[]" /> <!--holds pattern for comparison-->
<aura:attribute name="UserPattern" type="String[]" /> <!--Color value-->


Game of Simon
<lightning:layout>
    <lightning:layoutItem>
        <lightning:button  class="redButton" title="red" value="{!v.ButtonColors[0]}" onclick="{!c.SimonButtonClick}" />
    </lightning:layoutItem>
    <lightning:layoutItem>
        <lightning:button  class="greenButton" title="green" value="{!v.ButtonColors[1]}" onclick="{!c.SimonButtonClick}" />
    </lightning:layoutItem>
    <lightning:layoutItem>
        <lightning:button  class="blueButton" title="blue" value="{!v.ButtonColors[2]}" onclick="{!c.SimonButtonClick}" />
    </lightning:layoutItem>
    <lightning:layoutItem>
        <lightning:button  class="yellowButton" title="yellow" value="{!v.ButtonColors[3]}" onclick="{!c.SimonButtonClick}" />
    </lightning:layoutItem>
</lightning:layout>
</aura:component>	
